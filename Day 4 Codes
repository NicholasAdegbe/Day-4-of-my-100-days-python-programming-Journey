# # Genrating random numbers
import random
random_number = random.randint(1,20)
print(random_number)

# # importing and using modules
import my_module
print(my_module.pi)

# # Generating a rondom floating point numbers
random_float=random.random()
print(random_float)

# # Generating random numbers and assigning the names.
import random
random_number = random.randint(0,1)
if random_number==0:
    print("Tails")
else:
    print("Heads")

# Python lists
Countries_in_Africa=["Ghana", "Gambia", "Uganda"]
print(Countries_in_Africa)
# To print an item out of the list
print(Countries_in_Africa[0])
# Print from end of list
print(Countries_in_Africa[-1])
# Adding to the list
Countries_in_Africa.append("Kenya")
print(Countries_in_Africa)
# Adding list to list
Countries_in_Africa.extend(["South Africa", "South Sudan", "Togo"])
print(Countries_in_Africa)

# Random names generator for payment of meals
import random

# Split string method
names_string = input("Give me everybody's names, separated by a comma. ")
names = names_string.split(", ")

#Write your code below this line ðŸ‘‡

#Get the total number of items in list.
num_items = len(names)
#Generate random numbers between 0 and the last index. 
random_choice = random.randint(0, num_items - 1)
#Pick out random person from list of names using the random number.
person_who_will_pay = names[random_choice]

print(person_who_will_pay + " is going to buy the meal today!")

# OR
import random
print(names)
Choice=random.choice(names)
print(f"{Choice} is going to buy the meal today!")

# NESTED LISTS
fruits=["Orange", "Mango", "Pear"]
vegetables=["Pepper", "Tomato", "Onions",]
meal=[fruits, vegetables]
print(meal)
